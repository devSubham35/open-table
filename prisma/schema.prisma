generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


//////////////////////////////////////////
//////////////////////////////////////////

enum PRICE {
  CHEAP
  REGULAR
  EXPENSIVE
}

model Restaurant {
  id          String     @id @default(cuid())
  name        String
  slug        String     @unique
  main_image  String
  description String
  price       PRICE
  open_time   String
  close_time  String
  items       MenuItem[]
  location_id String
  location    Location   @relation(fields: [location_id], references: [id])
  region_id   String
  region      Region     @relation(fields: [region_id], references: [id])
  reviews     Review[]
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
}

model MenuItem {
  id            String     @id @default(cuid())
  name          String
  description   String
  price         String
  restaurant_id String
  restaurant    Restaurant @relation(fields: [restaurant_id], references: [id])
  created_at    DateTime   @default(now())
  updated_at    DateTime   @updatedAt
}

model Location {
  id          String       @id @default(cuid())
  name        String
  restaurants Restaurant[]
  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt
}

model Region {
  id          String       @id @default(cuid())
  name        String
  restaurants Restaurant[]
  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt
}

model Review {
  id            String     @id @default(cuid())
  full_name     String
  description   String
  rating        Float
  user_id       String
  User          User       @relation(fields: [user_id], references: [id])
  restaurant_id String
  Restaurant    Restaurant @relation(fields: [restaurant_id], references: [id])
  created_at    DateTime   @default(now())
  updated_at    DateTime   @updatedAt
}

model User {
  id         String   @id @default(cuid())
  name       String
  city       String
  password   String
  email      String   @unique
  reviews    Review[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
